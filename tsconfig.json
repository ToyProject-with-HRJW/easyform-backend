{
  "compilerOptions": {
    "module": "commonjs", // 'commonjs', 'amd', 'es2015', 'esnext'
    "declaration": true, // 컴파일시 .d.ts 파일도 자동으로 함께생성 (현재쓰는 모든 타입이 정의된 파일)
    "removeComments": true, // 컴파일시 주석제거 
    "emitDecoratorMetadata": true, // 최신 버전의 데코레이터 사용 여부
    "experimentalDecorators": true, // TC39 표준화 프로세스 이전의 데코레이터 사용 여부
    "allowSyntheticDefaultImports": true, // import 문법 허용
    "target": "es2017", // 사용할 자바스크립트 버전
    "sourceMap": true, // 디버깅과 개발할 때 도움을 준다. 디렉토리에 .map 파일 생성
    "outDir": "./dist", // 컴파일 후 생성되는 js파일이 생성될 폴더명
    "baseUrl": "./", // 현재 이 프로젝트에 기본 디렉토리 설정
    "incremental": true, // 이전 컴파일 단계에서의 디스크의 파일로 정보를 읽거나 기록하는 기능
    "skipLibCheck": true, // 정의 파일의 타입 확인을 할것인지를 결정
    "strictNullChecks": false, // null, undefined 타입에 이상한 짓 할시 에러내기 
    "noImplicitAny": false, // any타입 금지 여부
    "strictBindCallApply": false, // 엄격한 'bind', 'call', 'apply' 함수 메서드 사용
    "forceConsistentCasingInFileNames": false, // 동일한 파일에 대한 일관되지 않은 케이스 참조를 허용하지 않음
    "noFallthroughCasesInSwitch": false, // switch문 이상하면 에러내기 
    "esModuleInterop": true // ES6 모듈 사양을 준수하여 CommonJS 모듈을 가져올 수 있게해줌 
  }
}
